@require '../Vars.styl'

$border = .1em solid $darker

.aspekto.hr
	border none
	box-shadow 0 0 1.5em 0 rgba(0, 0, 0, .3)
	border-radius 1em

	&.h
		border-bottom $border
		margin 1em 0
		width 100%
		height 0
		display inline-block

	&.v
		border-left $border
		margin 0 1em
		width 0
		height 100%
		display inline