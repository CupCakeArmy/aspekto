@require '../Vars.styl'


.aspekto.switch
	position: relative
	display: inline-block
	width: 3em
	height: 1em

	& > input
		opacity: 0
		width: 0
		height: 0

		&:checked + .slider:before
			transform: translateX(1.5em)

	& > .slider
		position: absolute
		cursor: pointer
		top: 0
		left: 0
		right: 0
		bottom: 0
		background-color: $dark
		transition: $t-input

		&:before
			position: absolute
			content: ""
			height: .5em
			width: 1em
			left: .25em
			bottom: .25em
			background-color: $light
			transition: $t-input



